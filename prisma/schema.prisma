generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  name      String
  presences Presences[]
  password  String

  @@map("tb_users")
}

model Teacher {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  presences Presences[]

  @@map("tb_teachers")
}

model Presences {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  teacher   Teacher  @relation(fields: [teacherId], references: [id])
  teacherId Int
  startsAt  DateTime 
  endAt     DateTime

  @@map("tb_presences")
}
